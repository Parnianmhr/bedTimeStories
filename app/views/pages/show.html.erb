<h1>Page <%= @page.id%></h1>

<p><%= image_tag @page.image_url %></p>
<p><%= @page.text%></p>


<%= link_to "Edit", edit_page_path(@page.id) %>
<%= link_to "Delete", page_path(@page.id), method: :delete, data: { confirm: "Are you sure?" } %>
<%= link_to "back", request.referer.present? ? page_path(@page.id-1) : request.referer  %>
<%= link_to "next", request.referer.present? ? page_path(@page.id+1) : request.referer %>
