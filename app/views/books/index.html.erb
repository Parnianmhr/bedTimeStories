<!-- book index page -->
<section class="banner">
  <h1>ENJOY WRITING TOGETHER</h1>
  <h3>Start writing your own book now!</h3>
  <%= link_to "Add a new book", new_book_path, class: "book-button banner-button" %>
</section>

<section class="book-gallery">
  <% @books.each do |book| %>
  <article class="book-card">
    <div><%= image_tag book.image_url, class: "book-image" %></div>
    <h2><%= link_to book.title, book_path(book.id), class: "book-title" %></h2>
    <%= link_to "Delete", book_path(book.id), method: :delete, data: { confirm: "Are you sure?"}, class: "book-button" %>
    <%= link_to "Edit", edit_book_path(book.id), class: "book-button" %>
  </article>
  <% end %>
</section>
